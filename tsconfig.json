{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": false,
    "lib": [
      "DOM",
      "ESNext",
      "DOM.Iterable",
    ],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "types": [
      "node",
      "mocha",
      "chrome",
      "vite/client",
      "expect-webdriverio",
      "@wdio/globals/types",
    ]
  },
  "include": [
    "src",
    "popup",
    "common",
    "types.ts",
    "background",
    "test/fixtures",
    "content-script",
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
