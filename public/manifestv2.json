{
  "manifest_version": 2,
  "name": "VodSkipper",
  "author": "my@email.com",
  "description": "Extension for skipping muted VOD sections on Twitch.tv.",
  "homepage_url": "https://github.com/Thnderbread/twitchextension",
  "version": "0.0.1",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "run_at": "document_idle",  
      "js": ["./contentScript/index.js"],
      "css": ["./style.css"]
    }
  ],
  "background": {
    "page": "./background/index.html",
    "persistent": false
  },
  "browser_action": {
    "default_area": "navbar",
    "default_popup": "./popup/index.html",
    "default_title": "VODSkipper",
    "default_icon": "icon-72x72.png"
  },
  "permissions": ["activeTab", "tabs", "cookies", "storage", "scripting"],
  "icons": {
    "72": "vodskipper-72.png",
    "96": "vodskipper-96.png",
    "128": "vodskipper-128v4.png",
    "144": "vodskipper-144.png",
    "152": "vodskipper-152.png"
  }
}
